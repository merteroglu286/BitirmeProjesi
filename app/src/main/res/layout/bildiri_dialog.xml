<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_dialog"
    android:padding="16dp">

    <EditText
        android:id="@+id/messageEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:gravity="top|left"
        android:minLines="6"
        android:scrollbars="none"
        android:background="@drawable/bildiri_edittext_bg"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bildiri derecesini seçiniz"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/messageEdittext"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt"
        android:padding="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#64DD17"
            android:layout_marginHorizontal="12dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#FFD600"
            android:layout_marginHorizontal="12dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#DD2C00"
            android:layout_marginHorizontal="12dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/bildiriOlusturBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/linearButtons"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="62dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_background_1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Oluştur"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp" />
</RelativeLayout>